# --- Firebase Admin (Server) ---
FIREBASE_PROJECT_ID=
FIREBASE_CLIENT_EMAIL=
# Paste private key with literal \n for newlines
FIREBASE_PRIVATE_KEY=

# === Guesty Open API (https://help.guesty.com/hc/en-gb/articles/9370472424605-Using-Guesty-s-Open-API) ===
GUESTY_CLIENT_ID=
GUESTY_CLIENT_SECRET=
# Optional overrides (usually leave as default):
GUESTY_BASE_URL=https://open-api.guesty.com
GUESTY_OAUTH_URL=https://open-api.guesty.com/oauth2/token
# Optional: webhook signing
GUESTY_WEBHOOK_SECRET=
# Optional: rate limiting (default 120ms = ~8 req/s)
GUESTY_MIN_GAP_MS=120

# Firebase Configuration (Client-side)
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=kolakevilla-firebase-default-rtdb.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=G-your_measurement_id

# Firebase Admin SDK (Server-side)
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your_project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nyour_private_key\n-----END PRIVATE KEY-----\n"
FIREBASE_STORAGE_BUCKET=your_project.appspot.com

# Optional Firebase Features
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your_recaptcha_site_key
NEXT_PUBLIC_FIREBASE_API_KEY=
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=
NEXT_PUBLIC_FIREBASE_PROJECT_ID=
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=
NEXT_PUBLIC_FIREBASE_APP_ID=

# OpenAI API Key (for AI features)
OPENAI_API_KEY=

# Replicate API Key (for AI image enhancement)
REPLICATE_API_TOKEN=
# Optional: override API URL
REPLICATE_API_BASE=https://api.replicate.com

# --- Airbnb Price Extraction (Optional) ---
# If you have a logged-in session cookie for your own listings:
AIRBNB_COOKIE=
# Proxy settings if needed
HTTP_PROXY=
HTTPS_PROXY=
# Force a locale/timezone when rendering
EXTRACT_TZ=UTC
# Headless toggle for local debug (true/false)
PW_HEADLESS=true