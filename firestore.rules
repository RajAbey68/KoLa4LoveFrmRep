rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isAuthed() { return request.auth != null; }
    function isAdmin() { return isAuthed() && request.auth.token.admin == true; }

    // CMS Content - Admin only
    match /cmsContent/{id} {
      allow read, write: if isAdmin();
    }

    // Authorized Contacts - Admin only
    match /authorizedContacts/{id} {
      allow read, write: if isAdmin();
    }

    // Ko Lake Life content - Public read, admin write
    match /koLakeLife/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Gallery Images - Public read, admin write
    match /galleryImages/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}