
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow authenticated users to read and write their own files
    match /gallery/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Allow admins to read/write all gallery files
    match /gallery/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.token.email in ['raj@kolakevilla.com', 'stay@kolakevilla.com'];
    }
    
    // Public read access for uploaded images
    match /public/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && 
        request.auth.token.email in ['raj@kolakevilla.com', 'stay@kolakevilla.com'];
    }
  }
}
